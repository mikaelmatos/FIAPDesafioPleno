@using System
@using System.Security.Claims
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FIAPTestePleno</title>

    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        .nav-glass {
            background: rgba(255,255,255,0.06);
            backdrop-filter: blur(6px);
            border-bottom: 1px solid rgba(255,255,255,0.06);
        }

        .badge-accent {
            background: linear-gradient(90deg,#facc15,#f59e0b);
            color: #0f172a;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@keyframes slideDown {
            from {
                transform: translateY(-6px);
                opacity: 0
            }

            to {
                transform: translateY(0);
                opacity: 1
            }
        }

        .anim-fade {
            animation: fadeIn .28s ease both;
        }

        .anim-drop {
            animation: slideDown .22s ease both;
        }
    </style>

    @functions {
        public string NavLinkClass(string controller)
        {
            var current = (ViewContext?.RouteData?.Values["controller"] ?? "").ToString();
            if (string.Equals(current, controller, StringComparison.OrdinalIgnoreCase))
            {
                return "text-yellow-300 font-semibold";
            }
            return "text-white/90 hover:text-yellow-300 transition";
        }
    }
</head>
<body class="min-h-screen bg-gradient-to-r from-blue-800 via-blue-600 to-indigo-600">

    <header x-data="{ open: false }"
            class="fixed inset-x-0 top-0 z-50 nav-glass">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center gap-3 text-white">
                    <a href="/Admin" class="flex items-center gap-3 no-underline">
                        <div class="w-10 h-10 rounded-lg flex items-center justify-center bg-white/10">
                            <span class="text-white font-bold">FP</span>
                        </div>
                        <div>
                            <div class="text-lg font-bold tracking-tight">FIAPTestePleno</div>
                            <div class="text-xs text-white/70 -mt-0.5">Painel administrativo</div>
                        </div>
                    </a>
                </div>

                @if (User.FindFirst(ClaimTypes.Role)?.Value == "Administrator")
                {

                    <nav class="hidden md:flex items-center gap-8">
                        <ul class="flex items-center gap-6">
                            <li><a href="/Alunos" class="@NavLinkClass("Alunos")">Alunos</a></li>
                            <li><a href="/Matriculas" class="@NavLinkClass("Matriculas")">Matrículas</a></li>
                            <li><a href="/Turmas" class="@NavLinkClass("Turmas")">Turmas</a></li>
                        </ul>
                    </nav>
                }

                <div class="hidden md:flex items-center gap-3">
                    <a href="/Login/Logout" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-xl font-semibold shadow anim-fade">
                        Sair
                    </a>
                </div>

                <div class="md:hidden flex items-center">
                    <button @@click="open = !open" aria-label="Abrir menu"
                            class="p-2 rounded-md text-white/90 hover:text-yellow-300 transition">
                        <svg x-show="!open" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                        <svg x-show="open" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <div x-show="open" x-transition class="md:hidden border-t border-white/5">
            <div class="pt-3 pb-4 px-4 space-y-2">
                @if (User.FindFirst(ClaimTypes.Role)?.Value == "Administrator")
                {
                    <a href="/Alunos" class="block px-3 py-2 rounded-md @NavLinkClass("Alunos")">Alunos</a>
                    <a href="/Matriculas" class="block px-3 py-2 rounded-md @NavLinkClass("Matriculas")">Matrículas</a>
                    <a href="/Turmas" class="block px-3 py-2 rounded-md @NavLinkClass("Turmas")">Turmas</a>
                }
                <div class="border-t border-white/5 mt-2 pt-3 flex flex-col gap-2">
                    <button id="openMeusDadosBtnMobile" type="button" class="w-full text-left px-3 py-2 rounded-md bg-yellow-400 text-black font-semibold">
                        Meus Dados
                    </button>
                    <a href="/Login/Logout" class="block px-3 py-2 rounded-md bg-red-500 text-white text-center">Sair</a>
                </div>
            </div>
        </div>
    </header>

    <main class="pt-20 pb-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            @RenderBody()
        </div>
    </main>

    <footer class="mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="py-6 text-center text-white/80 text-sm">
                &copy; @DateTime.Now.Year FIAPTestePleno — Todos os direitos reservados.
            </div>
        </div>
    </footer>

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js"></script>

    <script>
        function tryOpenMeusDados() {
            if (typeof openAdminModal === 'function') {
                openAdminModal();
            } else {
                window.location.href = '/Account/Perfil';
            }
        }

        document.getElementById('openMeusDadosBtn')?.addEventListener('click', tryOpenMeusDados);
        document.getElementById('openMeusDadosBtnMobile')?.addEventListener('click', tryOpenMeusDados);

        window.addEventListener('resize', function () {
            const html = document.documentElement;
            if (window.innerWidth >= 768) {
                const alpine = html.__x;
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
