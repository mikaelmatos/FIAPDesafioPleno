@{
    ViewData["Title"] = "Painel de Matrículas";
}

<section class="max-w-7xl mx-auto py-10 px-6">

    <!-- Header -->
    <div class="relative mb-8">
        <div class="absolute inset-0 -z-10 rounded-2xl bg-gradient-to-r from-blue-800 via-blue-600 to-indigo-600 opacity-90 blur-sm"></div>
        <div class="rounded-2xl bg-white/10 backdrop-blur-md border border-white/20 text-white px-6 py-6 flex flex-col md:flex-row md:items-center md:justify-between shadow-xl animate-fade-in">
            <div>
                <h1 class="text-3xl font-bold tracking-tight">Matrículas</h1>
                <p class="text-white/80 mt-1">Gerencie as matrículas de alunos em turmas</p>
            </div>
            <button type="button"
                    class="bg-yellow-400 hover:bg-yellow-500 text-black px-3 py-2 rounded-lg font-medium shadow-sm transition-transform hover:scale-105"
                    onclick="openCreateModal()">
                Cadastrar Matrícula
            </button>
        </div>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto bg-white rounded-2xl shadow-2xl border border-gray-100 animate-fade-in-slow">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50">
                <tr class="text-gray-600 text-sm">
                    <th class="py-2 px-3 font-medium">Id</th>
                    <th class="py-4 px-5 font-medium">Aluno</th>
                    <th class="py-4 px-5 font-medium">Turma</th>
                    <th class="py-4 px-5 font-medium text-center">Ações</th>
                </tr>
            </thead>
            <tbody id="matriculasTable" class="text-gray-700">

                @if (ViewBag.Matriculas != null && ViewBag.Matriculas.Count > 0)
                {
                    foreach (var m in ViewBag.Matriculas)
                    {
                        <tr class="border-t hover:bg-gray-50/70 transition">
                            <td class="py-2 px-3">@m.id</td>
                            <td class="py-4 px-5">@m.aluno.nome</td>
                            <td class="py-4 px-5">@m.turma.nome</td>
                            <td class="py-4 px-5">
                                <div class="flex gap-2 justify-center">
                                    <button type="button"
                                            class="bg-yellow-400 hover:bg-yellow-500 text-black px-3 py-2 rounded-lg font-medium shadow-sm transition-transform hover:scale-105"
                                            data-id="@m.id" data-alunoid="@m.aluno.alunoId" data-turmaid="@m.turma.turmaId"
                                            onclick="openEditModalFromBtn(this)">
                                        Editar
                                    </button>
                                    <button type="button"
                                            class="bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded-lg font-medium shadow-sm transition-transform hover:scale-105"
                                            data-id="@m.id"
                                            onclick="openDeleteModalFromBtn(this)">
                                        Excluir
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="border-t">
                        <td colspan="4" class="py-10 px-5 text-center text-gray-500">
                            Nenhuma matrícula encontrada
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

<!-- MODAL CREATE -->
<div id="createModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-6 animate-scale-in">
        <div class="flex items-center justify-between mb-2">
            <h2 class="text-xl font-bold">Cadastrar Matrícula</h2>
            <button type="button" class="text-gray-500 hover:text-gray-700" onclick="closeCreateModal()">✕</button>
        </div>
        <form method="post" action="/Matriculas/Create" class="space-y-4">
            @Html.AntiForgeryToken()
            <div>
                <label class="block text-sm font-medium mb-1">Aluno</label>
                <select name="AlunoId" id="createAlunoId"
                        class="w-full border border-gray-300 rounded-xl px-3 py-2 select2">
                    <option value="">Selecione um aluno...</option>
                    @foreach (var a in ViewBag.Alunos)
                    {
                        <option value="@a.id">@a.nome</option>
                    }
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium mb-1">Turma</label>
                <select name="TurmaId" id="createTurmaId"
                        class="w-full border border-gray-300 rounded-xl px-3 py-2 select2">
                    <option value="">Selecione uma turma...</option>
                    @foreach (var t in ViewBag.Turmas)
                    {
                        <option value="@t.id">@t.nome</option>
                    }
                </select>
            </div>
            <div class="flex justify-end gap-3 pt-2">
                <button type="button" onclick="closeCreateModal()"
                        class="px-4 py-2 border border-gray-300 rounded-xl hover:bg-gray-50">
                    Cancelar
                </button>
                <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-xl font-semibold shadow">
                    Salvar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- MODAL EDIT -->
<div id="editModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-6 animate-scale-in">
        <div class="flex items-center justify-between mb-2">
            <h2 class="text-xl font-bold">Editar Matrícula</h2>
            <button type="button" class="text-gray-500 hover:text-gray-700" onclick="closeEditModal()">✕</button>
        </div>
        <form method="post" action="/Matriculas/Edit" class="space-y-4">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" id="editId" />
            <div>
                <label class="block text-sm font-medium mb-1">Aluno</label>
                <select name="AlunoId" id="editAlunoId" class="w-full border border-gray-300 rounded-xl px-3 py-2 select2">
                    @foreach (var a in ViewBag.Alunos)
                    {
                        <option value="@a.id">@a.nome</option>
                    }
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium mb-1">Turma</label>
                <select name="TurmaId" id="editTurmaId" class="w-full border border-gray-300 rounded-xl px-3 py-2 select2">
                    @foreach (var t in ViewBag.Turmas)
                    {
                        <option value="@t.id">@t.nome</option>
                    }
                </select>
            </div>
            <div class="flex justify-end gap-3 pt-2">
                <button type="button" onclick="closeEditModal()"
                        class="px-4 py-2 border border-gray-300 rounded-xl hover:bg-gray-50">
                    Cancelar
                </button>
                <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-xl font-semibold shadow">
                    Salvar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- MODAL DELETE -->
<div id="deleteModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-6 text-center animate-scale-in">
        <h2 class="text-xl font-bold mb-2">Tem certeza?</h2>
        <p class="text-gray-600 mb-6">Deseja realmente excluir esta matrícula?</p>
        <form method="post" action="/Matriculas/Delete" class="flex flex-col items-center gap-4">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" id="deleteId" />
            <div class="flex justify-center gap-3">
                <button type="button" onclick="closeDeleteModal()"
                        class="px-4 py-2 border border-gray-300 rounded-xl hover:bg-gray-50">
                    Cancelar
                </button>
                <button type="submit"
                        class="bg-red-500 hover:bg-red-600 text-white px-5 py-2 rounded-xl font-semibold shadow">
                    Excluir
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    const modalShow = (id) => {
        const el = document.getElementById(id);
        if (!el) return;
        el.classList.remove('hidden');
        el.classList.add('flex');
    };
    const modalHide = (id) => {
        const el = document.getElementById(id);
        if (!el) return;
        el.classList.add('hidden');
        el.classList.remove('flex');
    };

    function openCreateModal() {
        modalShow('createModal');
    }

    function openEditModal(id, alunoId, turmaId) {
        document.getElementById('editId').value = id || '';
        document.getElementById('editAlunoId').value = alunoId || '';
        document.getElementById('editTurmaId').value = turmaId || '';
        modalShow('editModal');
    }
    function openEditModalFromBtn(btn) {
        openEditModal(btn.dataset.id, btn.dataset.alunoid, btn.dataset.turmaid);
    }
    function closeEditModal() { modalHide('editModal'); }
    function closeCreateModal() { modalHide('createModal'); }

    function openDeleteModal(id) {
        document.getElementById('deleteId').value = id || '';
        modalShow('deleteModal');
    }
    function openDeleteModalFromBtn(btn) {
        openDeleteModal(btn.dataset.id);
    }
    function closeDeleteModal() { modalHide('deleteModal'); }
</script>

<!-- Select2 (para busca nos combos) -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        $('.select2').select2({
            width: '100%',
            placeholder: "Digite para buscar...",
            allowClear: true
        });
    });
</script>
